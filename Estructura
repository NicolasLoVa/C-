#include<stdio.h>

int main(){
    struct Articulo{ //creoamos un tipo de estructura llamada a articulo, el
    //que debe contener cod, el precio y si existe
        int cod;
        float precio;
        char existe;    
    };
    struct Articulo m1; //creas un tipo de articulo llamado m1
    m1.cod=1;
    m1.precio=1.30;
    m1.existe='s';
    printf("\nARTICULOS: ");
    printf("\nCODIGO\tPRECIO\tEXISTENCIA");
    printf("\n%d\t%f\t%c",m1.cod,m1.precio,m1.existe); //muestras las variables
    //del articulo
   
    return 0;
   
   
}


   
   
}
